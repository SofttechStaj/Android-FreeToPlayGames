<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="80dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingBottom="16dp">


        <TextView
            android:id="@+id/rss_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:text="10/08/2021"
            android:textColor="@color/white"
            android:paddingHorizontal="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rss_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="World of tanks new update"
            android:textColor="#5091FC"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/rss_date" />

        <TextView
            android:id="@+id/rss_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In publishing and graphic design,
            Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content. Lorem ipsum may be used as a placeholder before final copy is available. Wikipedia"
            android:textColor="@color/white"
            android:lineSpacingExtra="-1dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="4dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/rss_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>